	+svg-icon()
	-
		var filters = [
			{
				name: 'Type',
				items: ['Carpet', 'Tiles', 'Vinyl Planks', 'Laminate', 'Vinyl', 'Woods', ]
			},
			{
				name: 'Fibre',
				items: ['Fibre 1', 'Fibre 2', 'Fibre 3', 'Fibre 4', ]
			},
			{
				name: 'Colours',
				items: ['Colours 1', 'Colours 2', 'Colours 3', 'Colours 4', ]
			},
			{
				name: 'Features',
				items: ['Features 1', 'Features 2', 'Features 3', 'Features 4']
			},
		];
		var vantages = [
			{
				icon: 'stores',
				text: '57 stores nationwide',
			},
			{
				icon: 'quote',
				text: 'free measure & quote',
			},
			{
				icon: 'finance',
				text: 'finance options available',
			},
			{
				icon: 'commercial',
				text: 'expertise in all commercial sectors',
			},
			{
				icon: 'quality',
				text: '2019 Reader’s Digest Quality service award ',
			},
		]

	.category-head
		h1 Carpet
	.packaging
