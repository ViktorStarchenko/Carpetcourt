block vars
	- var bodyClass = ''
	- var pageTitle = 'Product'
	- var DIR = ''
block content
	// SVG Sprite
	+svg-icon()

	.packaging-product
		.crumps
			ul.crumps-list
				li.crumps-list__item
					a(href="") home
				li.crumps-list__item
					a(href="") category
				li.crumps-list__item
					span product page
		.product-grid
			.product-grid__media
				h2.product-slider-title Rhino EverCore Herringbone
				+product-slider-new
				+product-features

			.product-grid__description
				.product-description
					.product-description__sales
						.product-sales-banner Sale
					h2.product-description__title Rhino EverCore Herringbone
					p The sophisticated herringbone look is now easy to achieve without the hefty price tag. This easy-to install material is available in a range of on-trend finishes with the power to transform any blank space into a stylish masterpiece.
				.product-extend
					.product-price
						.product-price__value
							span.-old $59.99
							span.-new $39.99
						.product-price__unit *per sqm
					.product-special Includes #[b FREE] Bissell Floor Cleaner
				// или
				.product-extend
					.product-price
						.product-price__value
							span $59.99
