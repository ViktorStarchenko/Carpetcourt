extends ../tpl/layout
include ../../components/prefooter/index

include ../../components/pages/product/product-features/index
include ../../components/pages/product/product-selector/index
include ../../components/pages/product/product-info/index
include ../../components/pages/product/review/index
include ../../components/pages/product/review-form/index
//- include ../../components/pages/product/product-slider/index
include ../../components/pages/product/product-slider-new/index
